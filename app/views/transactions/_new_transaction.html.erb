<%= form_for(@transaction) do |f| %>
	<%= render "shared/error_messages", object: f.object %>

	<%= f.label :amount, "Amount ($)" %>
	<%= f.number_field :amount, value: number_to_currency(f.object.amount.to_f, delimiter: '', unit: ''), step: :any, class: "form-control" %>

	<%= f.label :description %>
	<%= f.text_field :description, class: "form-control", placeholder: "Description" %>

	<%= f.label :date %>
	<%= f.date_field :event_date, class: "form-control" %>

	<%= f.label :Category %>
	<%= f.select :category_id, @categories.collect{ |c| [ "#{c.name} (#{c.flow})", c.id ]}, {}, {class: "form-control"} %>

	<div>
		<%= f.submit yield(:button), class: 'btn btn-primary' %>
	</div>
<% end %>